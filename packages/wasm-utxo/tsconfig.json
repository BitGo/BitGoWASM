  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "rootDir": "./js",
    "outDir": "./dist/esm"
