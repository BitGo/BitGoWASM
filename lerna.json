{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.test.js",
        "**/test/**"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version packages"
    }
  }
}

